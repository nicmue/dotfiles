#!/bin/bash

# Settings hash: {{ include "alt-tab-settings.xml" | sha256sum }}

echo "Syncing Alt-Tab settings from dotfiles..."

# Import your clean XML into the macOS defaults system
defaults import com.lwouis.alt-tab-macos "{{ .chezmoi.sourceDir }}/alt-tab-settings.xml"

# Restart the app to apply
killall AltTab 2>/dev/null || true
open -a AltTab

