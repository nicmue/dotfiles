// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "auto_update_extensions": {
    "zedokai": false
  },
  "colorize_brackets": true,
  "sticky_scroll": {
    "enabled": true
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "minimap": { "show": "never" },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    }
  },
  "language_models": {
    "anthropic": {}
  },
  "calls": {
    // Join calls with the microphone live by default
    "mute_on_join": true
  },
  "theme": "Zedokai Darker",
  "buffer_font_size": 12.0,
  "buffer_font_features": {
    // Disable ligatures:
    "calt": false
  },
  "show_whitespaces": "all",
  "vertical_scroll_margin": 8,
  "relative_line_numbers": "enabled",
  "soft_wrap": "none",
  "auto_signature_help": true,
  "show_signature_help_after_edits": false,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "toggle_relative_line_numbers": true
  },
  "tabs": {
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },
  "inlay_hints": {
    "enabled": true
  },
  "project_panel": {
    "sort_mode": "mixed",
    "auto_fold_dirs": true
  },
  "outline_panel": {
    "dock": "left",
    "default_width": 240
  },
  "languages": {
    "TypeScript": {
      "language_servers": ["vtsls", "eslint", "!typescript-language-server"],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "language_servers": ["vtsls", "eslint", "!typescript-language-server"],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "SQL": {
      "formatter": {
        "external": {
          "command": "/Users/nico/.local/share/nvm/v22.14.0/bin/node",
          "arguments": [
            "/Users/nico/.local/share/nvm/v22.14.0/bin/sql-formatter",
            "--language",
            "postgresql"
          ]
        }
      }
    },
    "Python": {
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      },
      "format_on_save": "on"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "fetch": {
        "pre_release": true
      },
      "binary": {
        "ignore_system_version": true
      },
      "initialization_options": {
        "cargo": {
          "features": "all"
        },
        "checkOnSave": true,
        // "check": {
        //   "command": "clippy" // rust-analyzer.check.command (default: "check")
        // },
        "rustfmt": {
          "extraArgs": ["+nightly"]
        },
        "inlayHints": {
          "maxLength": 32,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closing_brace_hints_min_lines": 25,
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  },
  "file_scan_exclusions": [
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ]
}
